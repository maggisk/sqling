{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./lib",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "strict": true,
    "paths": {
      "sqling/lib/*": ["./*"]
    },
  },
  "exclude": ["lib", "test", "node_modules"]
}
